<%- include('partials/header') %>
        <div class="pure-g">
          <article class="post pure-u-1">
            <header>
              <h1><%= articleFound.title %></h1>
              <div class="post-meta">
                Par <a href="#"><%= articleFound.author %></a> 
                dans la catégorie <a href="#"><%= articleFound.category %></a>
              </div>
            </header>
            <figure class="post-picture">
              <img class="pure-img" src="../images/<%= articleFound.img %>" alt="<%= articleFound.img_alt %>">
              <figcaption class="post-picture-caption"><%= articleFound.sub_title %></figcaption>
            </figure>
            <div class="post-content">
              <p><%= articleFound.text %></p>
            </div>
            <footer>
              <a class="pure-button" href="../../">Retour à l'accueil</a>
            </footer>
          </article>

<%- include('partials/footer') %>       